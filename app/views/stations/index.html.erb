<section class="mx-auto w-1/3 mt-8">
  <h1 class="text-3xl font-bold mb-5 text-white">AQI Lookup</h1>
  <p class="my-3 text-white font-light">Already know a station?</p>
  <%= form_with model:@station, local:true do |f| %>
    <%= f.label :station_name, "Search by station name", class: "font-light block mb-2 text-white" %>
    <%= f.text_field :station_name, class: "px-3 py-1 font-light", autofocus: true %>

    <%= f.label :station_select, "Not sure?  Select a station", class: "font-light block mt-8 mb-2 text-white" %>
    <%= grouped_collection_select :station, :station_name, @states, :stations, :name, :station_name, :station_name, {}, 
                          {class: "bg-white font-light px-3 py-1"} %>

    <%= f.submit "Search", class: "mt-5 px-3 py-1 bg-blue-800 text-white font-light shadow-md" %>
  <% end %>
  
</section>
