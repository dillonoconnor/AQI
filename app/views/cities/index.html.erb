<article class="mx-auto w-1/3 mt-8">
  <h1 class="text-3xl font-bold mb-5 text-white">AQI Lookup</h1>
  <%= form_with model:@city, local:true do |f| %>
    <%= f.label :city_name, class: "font-light block mb-2 text-white" %>
    <%= f.text_field :cityname, class: "px-3 py-1 font-light", autofocus: true %>

    <%= f.submit "Search", class: "ml-2 px-3 py-1 bg-blue-800 text-white font-light shadow-md" %>
  <% end %>
</article>
